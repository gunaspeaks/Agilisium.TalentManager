@using Agilisium.TalentManager.Web.Helpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/error-styles.css" rel="stylesheet" />
    <link href="~/Content/dashboard.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/Agilisium/content-updater.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color:#bbbbd4; height:50px">
        <div>
            <div class="navbar-header">
                <div class="navbar-header pull-left" style="vertical-align:top">
                    <a class="navbar-brand" href="@Url.Action("Index", "Default")">
                        <img src="~/Content/Images/agilisium.jpg" alt="Agilisium-Talent Manager" style="height:25px;width:25px;" />
                    </a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color:darkblue; font-weight:bold;">
                    @*
                        <li>@Html.ImageLink("Index", "Home", null, "~/content/images/Agilisium_Logo.jpg", "Agilisium", null, null)</li>*@
                    @*<li>@Html.ActionLink("Agilisium - Talent Manager", "Index", "Home")</li>*@
                    @if (Request.Url.ToString().Contains("Employee"))
                        {
                            <li>@Html.ActionLink("Employees", "List", "Employee", new { @style = "color:darkblue" })</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Employees", "List", "Employee")</li>
                        }
                    @*<li class="dropdown">
                        @if (Request.Url.ToString().Contains("Employee"))
                        {
                            <a href="#" data-toggle="dropdown" style="color:darkblue" class="dropdown-toggle">Employees<b class="caret"></b></a>
                        }
                        else
                        {
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Employees<b class="caret"></b></a>
                        }
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Active Employees", "List", "Employee")</li>
                            <li>@Html.ActionLink("Past Employees", "PastEmployeeList", "Employee")</li>
                        </ul>
                    </li>*@

                    @if (Request.Url.ToString().Contains("Project"))
                    {
                        <li>@Html.ActionLink("Projects", "List", "Project", new { @style = "color:darkblue" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Projects", "List", "Project")</li>
                    }

                    @if (Request.Url.ToString().Contains("Allocation"))
                    {
                        <li>@Html.ActionLink("Project Allocations", "List", "Allocation", new { @style = "color:darkblue" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Project Allocations", "List", "Allocation")</li>
                    }

                    @if (Request.Url.ToString().Contains("Category") && !Request.Url.ToString().Contains("SubCategory"))
                    {
                        <li>@Html.ActionLink("Categories", "List", "Category", new { @style = "color:darkblue" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Categories", "List", "Category")</li>
                    }

                    @if (Request.Url.ToString().Contains("SubCategory") && Request.Url.ToString().Contains("Category"))
                    {
                        <li>@Html.ActionLink("Sub Categories", "List", "SubCategory", new { @style = "color:darkblue" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Sub Categories", "List", "SubCategory")</li>
                    }

                    @if (Request.Url.ToString().Contains("Practice") && !Request.Url.ToString().Contains("SubPractice"))
                    {
                        <li>@Html.ActionLink("Practices", "List", "Practice", new { @style = "color:darkblue" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Practices", "List", "Practice")</li>
                    }

                    @if (Request.Url.ToString().Contains("SubPractice") && Request.Url.ToString().Contains("Practice"))
                    {
                        <li>@Html.ActionLink("Sub Practices", "List", "SubPractice", new { @style = "color:darkblue" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Sub Practices", "List", "SubPractice")</li>
                    }

                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div style="font-weight:bold;color:darkgreen; border-bottom-width:1px; border-bottom-right-radius:40%; border-bottom-left-radius:40%; font-size:large; text-align:center" class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div style="font-weight:bold;color:darkblue; border-bottom-width:1px; border-bottom-right-radius:40%; border-bottom-left-radius:40%; font-size:large; text-align:center" class="alert alert-warning">
                @TempData["WarningMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div style="font-weight:bold;color:red; border-bottom-right-radius:40%; border-bottom-left-radius:40%; border-bottom-width:1px; font-size:large; text-align:center" class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        @RenderBody()
    </div>
</body>
</html>
