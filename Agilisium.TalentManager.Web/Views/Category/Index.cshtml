@model IEnumerable<Agilisium.TalentManager.Web.Models.CategoryViewModel>

@{
    ViewBag.Title = "All Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Categories</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.ShortName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.CategoryName, "Edit", new { id = item.CategoryID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Category"))
                        {
                            @Html.Hidden("id", item.CategoryID)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a New Category", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>

