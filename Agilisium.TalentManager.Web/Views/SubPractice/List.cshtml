@using Agilisium.TalentManager.Web.Helpers

@model Agilisium.TalentManager.Web.Models.SubPracticeViewModel

@{
    ViewBag.Title = "All Sub-Practices";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3><b>All Sub-Practices</b></h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <table style="width: 60%" class="table table-striped table-condensed table-bordered">
                <tr>
                    <td>
                        Practices @Html.DropDownListFor(d => d.SelectedPracticeID, Model.PracticeListItems)
                        <input type="submit" value="Get Sub Practices" class="btn btn-primary" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <div class="panel-body">
        <table style="width: 90%" class="table table-striped table-condensed table-bordered">
            <tr>
                <th width="15%" class="text-center">
                    @Html.DisplayNameFor(model => model.SubPractices.First().SubPracticeName)
                </th>
                <th width="10%" class="text-center">
                    @Html.DisplayNameFor(model => model.SubPractices.First().ShortName)
                </th>
                <th width="15%" class="text-center">
                    @Html.DisplayNameFor(model => model.SubPractices.First().PracticeName)
                </th>
                <th width="15%" class="text-center">
                    @Html.DisplayNameFor(model => model.SubPractices.First().ManagerName)
                </th>
                <th width="10%" class="text-center">Actions</th>
            </tr>

            @foreach (var item in Model.SubPractices)
            {
            <tr>
                <td>
                    @Html.ActionLink(item.SubPracticeName, "Edit", new { id = item.SubPracticeID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PracticeName)
                </td>
                <td>
                    @Html.ActionLink(item.ManagerName, "Edit", "Employee", new { id = item.ManagerID })
                </td>
                <td class="text-center">
                    @using (Html.BeginForm("Delete", "SubPractice"))
                    {
                        @Html.Hidden("id", item.SubPracticeID)
                        <input type="submit" onclick="return confirm('Are you sure you about deleting this Sub-Practice?');" class="btn btn-default btn-xs" value="Delete" />
                    }
                </td>
            </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a New Sub Practice", "Create", null, new { @class = "btn btn-default" })
        <div class="btn-group pull-right">
            @Html.AddPagination(Model.PagingInfo, x => Url.Action("List", new { page = x }))
        </div>
    </div>
</div>

