@model IEnumerable<Agilisium.TalentManager.Web.Models.ProjectViewModel>

@{
    ViewBag.Title = "All Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Projects</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.ProjectCode)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.DeliveryManagerName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.ProjectTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remarks)
                </th>
                <th class="text-center">Actions</th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectCode)
                </td>
                <td>
                    @Html.ActionLink(item.ProjectName, "Edit", new { id = item.ProjectID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryManagerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td class="text-center">
                    @using (Html.BeginForm("Delete", "Project"))
                    {
                        @Html.Hidden("id", item.ProjectID)
                        <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                    }
                </td>
            </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a New Project", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>